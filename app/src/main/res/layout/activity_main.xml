<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">





    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/dflogo"
        />



    <com.google.android.gms.common.SignInButton
        android:layout_marginTop="180dp"
        android:id="@+id/google_signin_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />



    <!--<Button
        android:layout_marginTop="100dp"
        android:id="@+id/google_signin_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with DFmail"
        android:layout_gravity="center"
        android:background="#005eb9"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:text="Login With DF MailID"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:id="@+id/username_et"
        android:visibility="gone"
        android:text="Enter the mail ID"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="Login"
        android:id="@+id/normallogin_bt"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:text="Pilot Version 0.01"/>



</LinearLayout>